{
  "tasks": {
    "start": "deno run --watch --allow-net --allow-read=public,pages --allow-env=PORT main.ts",
    "format": "deno fmt",
    "test": "deno fmt --check && deno lint && deno test --allow-net --allow-read=public,pages --allow-env=PORT --check=all"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
